                    {
                        "name": "classic"
                    },
                    {
                        "name": "lowercase"
                    },
                    {
                        "name": "kStem"
                    }
                ]
            }
        },
        {
            "name": "text",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "charFilters": [
                    {
                        "name": "htmlStrip"
                    },
                    {
                        "name": "mapping",
                        "mapping": "mapping-FoldToASCII.txt"
                    }
                ],
                "tokenizer": {
                    "name": "standard"
                },
                "filters": [
                    {
                        "name": "lowercase"
                    },
                    {
                        "name": "commonGrams"
                    },
                    {
                        "name": "synonym",
                        "synonyms": "synonyms.txt",
                        "ignoreCase": true,
                        "expand": true
                    },
                    {
                        "name": "stop",
                        "words": "stopwords.txt",
                        "ignoreCase": true
                    },
                    {
                        "name": "removeDuplicates"
                    },
                    {
                        "name": "porterStem"
                    }
                ]
            },
            "queryAnalyzer": {
                "charFilters": [
                    {
                        "name": "mapping",
                        "mapping": "mapping-FoldToASCII.txt"
                    }
                ],
                "tokenizer": {
                    "name": "standard"
                },
                "filters": [
                    {
                        "name": "lowercase"
                    },
                    {
                        "name": "commonGrams"
                    },
                    {
                        "name": "stop",
                        "words": "stopwords.txt",
                        "ignoreCase": true
                    },
                    {
                        "name": "porterStem"
                    }
                ]
            }
        }
