            "name": "short_text",
            "class": "solr.TextField",
            "indexAnalyzer": {
                "charFilters": [
                    {
                        "name": "mapping",
                        "mapping": "mapping-FoldToASCII.txt"
                    }
                ],
                "tokenizer": {
                    "name": "classic"
                },
                "filters": [
                    {
                        "name": "classic"
                    },
                    {
                        "name": "lowercase"
                    },
                    {
                        "name": "kStem"
                    },
                    {
                        "name": "phonetic",
                        "encoder": "DoubleMetaphone"
                    }
                ]
            },
            "queryAnalyzer": {
                "charFilters": [
                    {
                        "name": "mapping",
                        "mapping": "mapping-FoldToASCII.txt"
                    }
                ],
                "tokenizer": {
                    "name": "standard"
